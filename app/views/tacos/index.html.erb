<h1>Listing tacos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Meat</th>
      <th>Layers</th>
      <th>Calories</th>
      <th>Has cheese</th>
      <th>Has lettuce</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tacos.each do |taco| %>
      <tr>
        <td><%= taco.name %></td>
        <td><%= taco.meat %></td>
        <td><%= taco.layers %></td>
        <td><%= taco.calories %></td>
        <td><%= taco.has_cheese %></td>
        <td><%= taco.has_lettuce %></td>
        <td><%= taco.details %></td>
        <td><%= link_to 'Show', taco %></td>
        <td><%= link_to 'Edit', edit_taco_path(taco) %></td>
        <td><%= link_to 'Destroy', taco, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

